<%- include('partials/simpleHeader'); -%>
<div class="container">
        <h1 class="text-center">Update the blog <%= blog.name%></h1>
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <form action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
                    <div class="form-group text-center">
                        <input type="from-control" type="text" name="blog[name]" value=<%= blog.name%>>
                    </div>
                    
                    <div class="form-group text-center">
                        <input type="from-control" type="text" name="blog[image]" value=<%= blog.image%>>
                    </div>
                    
                    <div class="form-group text-center">
                        <input type="from-control" type="text" name="blog[description]" value=<%= blog.description%>>
                    </div>
                    
                    <div class="form-group">
                        <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                    </div>
                    
                </form>
            </div>
            <div class="col-md-4"></div>
       </div>
    <a href="/blogs">Go Back</a>

    </div>
</div>

<%- include('partials/footer'); -%>
