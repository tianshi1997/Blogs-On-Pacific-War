<%- include('partials/simpleHeader'); -%>
<div class="container">
        <h1 class="text-center">Update the comment</h1>
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <form action="/blogs/<%= blogid%>/comments/<%= comment._id%>?_method=PUT" method="POST">
                    
                    
                    <div class="form-group text-center">
                        <input type="from-control" type="text" name="comment[text]" value=<%= comment.text%>>
                    </div>
                    
                    
                    
                    <div class="form-group">
                        <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                    </div>
                    
                </form>
            </div>
            <div class="col-md-4"></div>
       </div>
    <a href="/blogs">Go Back</a>

    </div>
</div>

